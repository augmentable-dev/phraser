#!/usr/bin/env bash

set -e
echo "" > coverage.out

for d in $(go list ./... | grep -v vendor | grep -v cmd/phraser); do
    echo $d
    go test -v -race -coverprofile=cover.out -covermode=atomic $d
    if [ -f cover.out ]; then
        cat cover.out >> coverage.out
        rm cover.out
    fi
done
